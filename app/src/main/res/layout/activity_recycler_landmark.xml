<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Recycler_viewroute"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/busno"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="100"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/routenme"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Jayanagar 9th block to majestic"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/routefrom"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Jayanagar"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/routeto"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="majestic"
                android:textSize="10dp"
                />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/viewlandmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="viewlandmark"
            android:background="#D2691E"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/addlandmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add landmark"
            android:layout_marginLeft="10dp"
            android:background="#D2691E"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>